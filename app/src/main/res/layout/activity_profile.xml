<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/profileFragment"
        android:name="artyfartyparty.solo.Controller.EmptyFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/activity_fragment"
         />

    <Button
        android:id="@+id/myRidesButton"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profileFragment"
        android:text="My Rides" />

    <Button
        android:id="@+id/myRequestsButton"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profileFragment"
        android:text="My Requests" />

    <fragment
        android:id="@+id/profileDetailsFragment"
        android:name="artyfartyparty.solo.Controller.EmptyFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myRidesButton"
        tools:layout="@layout/activity_fragment" />

</RelativeLayout>
