<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soloGreen">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_height="517dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sign_up"
            android:textSize="30dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/soloBlue"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Name"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="56dp"
            android:textColor="@color/soloBlue"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:contentDescription="Name"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="94dp"
            android:textColor="@color/soloBlue"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="HÃ username"
            android:textColor="@color/soloBlue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="256dp">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/soloBlue"/>

        </LinearLayout>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/soloBlue"/>

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="300dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="253dp"
            android:textColor="@color/soloBlue"/>

        <TextView
            android:id="@+id/numberTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Phone number"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="304dp"
            android:textColor="@color/soloBlue"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="phone"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="323dp"
            android:textColor="@color/soloBlue"/>

        <TextView
            android:id="@+id/password1TextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Password"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="377dp"
            android:textColor="@color/soloBlue"/>

        <EditText
            android:id="@+id/password1EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/soloBlue"/>

        <TextView
            android:id="@+id/password2TextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Repeat password"
            android:textColor="@color/soloBlue"/>

        <EditText
            android:id="@+id/password2EditText"
            android:layout_width="300dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="396dp"
            android:textColor="@color/soloBlue"/>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="sign up"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="447dp"
            android:textColor="@color/soloBlue"
            android:background="@color/soloWhite"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>